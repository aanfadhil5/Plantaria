<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".explore.Explore">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INDOOR PLANTS"
        android:textSize="20dp"
        android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/explore_viewall_indoor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View All"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/holo_blue_light"
            android:onClick="onClickViewAll1"
            android:clickable="true"/>
    </RelativeLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/explore_pic_bougenville"
                android:layout_width="220dp"
                android:layout_height="180dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/explore_indoor_bougenville"
                android:onClick="onClickBougenville" />
            <ImageView
                android:id="@+id/explore_pic_anyelir"
                android:layout_width="220dp"
                android:layout_height="180dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/explore_indoor_anyelir"
                android:onClick="onClickAnyelir"/>
            <ImageView
                android:id="@+id/explore_pic_dahlia"
                android:layout_width="220dp"
                android:layout_height="180dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/explore_indoor_dahlia"
                android:onClick="onClickDahlia"/>
        </LinearLayout>
    </HorizontalScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OUTDOOR PLANTS"
            android:textSize="20dp"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/explore_viewall_outdoor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View All"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="15sp"
            android:onClick="onClickViewAll2"
            android:clickable="true"
            />
    </RelativeLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="10dp"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/explore_pic_blanceng"
                android:layout_width="220dp"
                android:layout_height="180dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/explore_outdoor_blanceng"
                android:onClick="onClickBlanceng"/>
            <ImageView
                android:id="@+id/explore_pic_lidah"
                android:layout_width="220dp"
                android:layout_height="180dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/explore_outdoor_lidah"
                android:onClick="onClickLidah"/>
            <ImageView
                android:id="@+id/explore_pic_palem"
                android:layout_width="220dp"
                android:layout_height="180dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/explore_outdoor_palem"
                android:onClick="onClickPalem"/>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>